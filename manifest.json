{
    "manifest_version": 3,
    "name": "AI Highlight Extension",
    "version": "1.0",
    "description": "Highlight key content using LLM (Ollama)",
    "permissions": ["scripting", "activeTab"],
    "host_permissions": ["<all_urls>"],
    "content_scripts": [{
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }],
    "action": {
      "default_popup": "popup.html"
    }
  }
  